<% if @user.error.any? %>
  <h1>YOU MASSIVE IDIOT</h1>
  <ul>
    <% @users.error.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<% form_for @users do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
